{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": "./", 
    "paths": {
      "config": ["src/config"] 
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
